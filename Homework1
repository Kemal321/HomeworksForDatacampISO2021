user=input("Please enter user name:")
password=input("Please enter password:")


if name1 == user and password1==password:
    print("\nGood Welcome again Sir have a nice day...")
elif name1 == user and password1 != password:
    print("Password is wrong please check it\n If you forgot your password take a temporal password")
elif name1 != user and password1==password:
    print("User name is wrong please check it\n DO NOT USE INVALID LETTER")
    
