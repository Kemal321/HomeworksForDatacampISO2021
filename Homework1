###############################################################################
#     Girilen sayının katlarını 20 bine kadar bulan program (While Loops)     #
#                             Coder:Kemalettin Kara                           #  
###############################################################################

sayi=int(input("Please enter a number to find divisors until 20.000:" ))

divisor=1;
divisors=[]

while(True):
    if divisor ==20000:
        break
    if sayi %divisor == 0 :
        divisors.append(divisor)
        divisor += 1
    else:
        divisor += 1
print(*divisors,sep=" -- ")  
 
 ############################OUTPUT###################################
  runfile('D:/ISO-PYTHON-DATACAMP-ÖDEVLERİ/untitled2.py', wdir='D:/ISO-PYTHON-DATACAMP-ÖDEVLERİ')

